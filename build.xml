<project name="Game of life" default="javadoc" basedir=".">

    <target name="javadoc">
        <javadoc sourcepath="src" destdir="doc" access="private"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="src" destdir="build" includeantruntime="false">
            <include name="**/*.java"/>
        </javac>
    </target>

    <target name="build" depends="compile">
        <jar basedir="build" destfile="dist/GameOfLife.jar">
            <manifest>
                <attribute name="Main-Class" value="model.GameOfLife"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="build">
        <java jar="dist/GameOfLife.jar" fork="true"/>
    </target>

    <target name="init">
        <mkdir dir="build"/>
        <mkdir dir="dist"/>
        <mkdir dir="doc"/>
    </target>

    <target name="clear">
        <delete dir="build"/>
        <delete dir="dist"/>
        <delete dir="doc"/>
    </target>

</project>
